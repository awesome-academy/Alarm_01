<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="TextSettingAlarm" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>

    <style name="TextSettingAlarmDetail" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_blue_text</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>

    <style name="ViewHorizontalLine" >
        <item name="android:background">@color/color_silver</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>

    <style name="ButtonSettingStyle">
        <item name="android:background">@color/color_black</item>
        <item name="android:textColor">@color/color_blue_text</item>
    </style>

    <style name="TextTimePicker" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/sp_60</item>
    </style>
</resources>
