<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constrainDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/textDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue_text"
            android:textSize="@dimen/sp_24"
            app:layout_constraintLeft_toLeftOf="@id/constrainDay"
            app:layout_constraintRight_toRightOf="@id/constrainDay"
            app:layout_constraintTop_toTopOf="@id/constrainDay"
            app:layout_constraintBottom_toBottomOf="@id/constrainDay"
            android:gravity="center"
            tools:text="@string/fake_day_of_week"/>

</android.support.constraint.ConstraintLayout>
